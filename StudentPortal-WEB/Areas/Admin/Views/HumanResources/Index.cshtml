@model List<GetHRVM>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3>İnsan Kaynakları Personelleri</h3>
            </div>
            <div class="card-body">
                <div class="table table-responsive-xl d-xl-table table- table-responsive-md table-responsive-sm table-sm table-responsive-lg table-responsive-xs">
                    <table class="table table-responsive-md table-responsive-sm table-sm  table-responsive-lg table-responsive-xs table-xs table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Doğum Tarihi</th>
                                <th>E-Mail</th>
                                <th>İşe Giriş Tarihi</th>
                                <th>Eklenme Tarihi</th>
                                <th>Güncellenme Tarihi</th>
                                <th>Durum</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var hr in Model)
                            {
                                <tr>
                                    <td>@hr.Id</td>
                                    <td>@hr.FirstName</td>
                                    <td>@hr.LastName</td>
                                    <td>@hr.BirthDate.ToShortDateString()</td>
                                    <td>@hr.Email</td>
                                    <td>@hr.HireDate.ToShortDateString()</td>
                                    <td>@hr.CreatedDate</td>
                                    @if (hr.UpdatedDate is not null)
                                    {
                                        <td>@hr.UpdatedDate</td>
                                    }
                                    else
                                    {
                                        <td> - </td>
                                    }
                                    <td>@hr.Status</td>
                                    <td>
                                        <a asp-action="UpdateHR" asp-route-id="@hr.Id" class="btn btn-outline-primary">Güncelle</a>
                                    </td>
                                    <td>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleModal-@hr.Id">
                                            Sil
                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModal-@hr.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Silme Uyarısı</h5>
                                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Silmek istediğinize emin misiniz?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                                                        <a asp-action="DeleteHR" asp-route-id="@hr.Id" class="btn btn-danger">Evet</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <a asp-action="CreateHR" class="btn btn-outline-dark d-block">Yeni Personel Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>