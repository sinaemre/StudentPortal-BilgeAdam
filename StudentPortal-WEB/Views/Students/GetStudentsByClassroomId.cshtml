@{
    ViewData["Title"] = "Students Index";
}
@model List<GetStudentsVM>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3>Öğrenciler Listesi</h3>
            </div>
            <div class="card-body">
                <div class="table table-responsive-xl d-xl-table table-responsive-md table-responsive-sm table-sm table-responsive-lg table-responsive-xs">
                    <table class="table table-responsive-md table-responsive-sm table-sm  table-responsive-lg table-responsive-xs table-hover">
                        <thead>
                            <tr>
                                <th>Öğrenci</th>
                                <th>Doğum Tarihi</th>
                                <th>Ortalama</th>
                                <th>Not Gir</th>
                                <th>Sınavlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>@student.FullName</td>
                                    <td>@student.BirthDate.ToShortDateString()</td>
                                    <td>@student.Average</td>
                                    <td>
                                        <a asp-action="EnterExamGrade" asp-route-id="@student.Id" class="btn btn-outline-success">Not Gir</a>
                                    </td>
                                    <td>
                                        <div class="accordion" id="accordionExample">

                                            <div class="accordion-item">
                                                <h2 class="accordion-header" id="headingTwo">
                                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo-@student.Id" aria-expanded="false" aria-controls="collapseTwo">
                                                        Notları Gör
                                                    </button>
                                                </h2>
                                                <div id="collapseTwo-@student.Id" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                                                    <div class="accordion-body">
                                                        <table class="table table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>Sınav - 1</th>
                                                                    <th>Sınav - 2</th>
                                                              @*       <th>Proje</th>
                                                                    <th>Ortalama</th>
                                                                    <th>Durum</th> *@
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr>
                                                                    <td>@student.Exam1</td>
                                                                    <td>@student.Exam2</td>
                                                                   @*  <td>@student.ProjectExam</td>
                                                                    <td>@student.Average</td>
                                                                    @if (student.IsSucceed is not null)
                                                                    {
                                                                        @if (student.IsSucceed == true)
                                                                        {
                                                                            <td>Geçtiniz</td>
                                                                        }
                                                                        else
                                                                        {
                                                                            <td>Kaldınız</td>
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <td>Devam Ediyor...</td>
                                                                    } *@
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
